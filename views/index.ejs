<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <div class="header">
      <h1><%= title %></h1>
      <% if(isAuthenticated){%>
        <a href="/new">+ Add</a>
        <% }%>
      </div>
      <ul class="list">
        <% articles.forEach(function(item) { %>
          <li><a href="/article/<%= item.id %>"><h1><%= item.title %></h1></a>
            <% if(isAuthenticated){%>
              <span>
              <a href="/edit/<%= item.id %>">Edit</a>
              <a data-method="DELETE" href="/delete/<%= item.id %>">Delete</a>
            </span>
              <% } else {%>
            <span><%= item.publish_date %></span>
            <% }%>
          </li>
        <% }); %>
      </ul>

    </div>
  </body>
</html>
